<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="Plancton.Maui.ColorPickerPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <Grid BackgroundColor="#80000000" Padding="2">
        <Border Stroke="Gray" BackgroundColor="White" Padding="5" StrokeThickness="1">
            <Grid ColumnDefinitions="*,*,*,*,*,*" RowDefinitions="*,*,*,*,*">
                <!-- 6 columns and 5 rows -->

                <!-- Row 1 -->
                <Button BackgroundColor="Red" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="Green" Grid.Column="1" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="Blue" Grid.Column="2" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="Yellow" Grid.Column="3" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="Orange" Grid.Column="4" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="Purple" Grid.Column="5" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>

                <!-- Row 2 -->
                <Button BackgroundColor="Pink" Grid.Row="1" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="Cyan" Grid.Row="1" Grid.Column="1" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="Lime" Grid.Row="1" Grid.Column="2" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="Magenta" Grid.Row="1" Grid.Column="3" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="Teal" Grid.Row="1" Grid.Column="4" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="Brown" Grid.Row="1" Grid.Column="5" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>

                <!-- Row 3 -->
                <Button BackgroundColor="Black" Grid.Row="2" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="White" Grid.Row="2" Grid.Column="1" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="Gray" Grid.Row="2" Grid.Column="2" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="#FFD700" Grid.Row="2" Grid.Column="3" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="#8B4513" Grid.Row="2" Grid.Column="4" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="#00CED1" Grid.Row="2" Grid.Column="5" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>

                <!-- Row 4 -->
                <Button BackgroundColor="#FF69B4" Grid.Row="3" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="#4B0082" Grid.Row="3" Grid.Column="1" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="#ADFF2F" Grid.Row="3" Grid.Column="2" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="#7FFFD4" Grid.Row="3" Grid.Column="3" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="#DC143C" Grid.Row="3" Grid.Column="4" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="#4682B4" Grid.Row="3" Grid.Column="5" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>

                <!-- Row 5 -->
                <Button BackgroundColor="#FF6347" Grid.Row="4" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="#FF6347" Grid.Row="4" Grid.Column="1" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="#B22222" Grid.Row="4" Grid.Column="2" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="#90EE90" Grid.Row="4" Grid.Column="3" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="#8A2BE2" Grid.Row="4" Grid.Column="4" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>
                <Button BackgroundColor="#A52A2A" Grid.Row="4" Grid.Column="5" CornerRadius="5" Margin="3" BorderColor="Gray" BorderWidth="2" Clicked="OnColorSelected"/>

            </Grid>
        </Border>
    </Grid>

</toolkit:Popup>
